@model LABTIAPP.Models.Subject

@{
    ViewData["Title"] = "Details";
}

<h2>Detalles</h2>

<div>
    <h4>Asignatura</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Hora inicio
        </dt>
        <dd>
            @Html.DisplayFor(model => model.InitDate)
        </dd>
        <dt>
            Hora fin
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FiniDate)
        </dd>
        <dt>
            Título
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt>
            Clave
        </dt>
        <dd>
            @Html.DisplayFor(model => model.KeyCode)
        </dd>
        <dt>
            Color
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Color.Name)
        </dd>
        <dt>
            Día
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Day.DayName)
        </dd>
        <dt>
            Aula
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Room.RoomName)
        </dd>
        <dt>
            Profesor/a
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Teacher.FullName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.SubjectId" class="btn btn-primary">Editar</a> |
    <a asp-action="Index">◄ Ver todas las asignaturas</a>
</div>
